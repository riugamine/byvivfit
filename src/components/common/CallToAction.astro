---
interface Props {
  title: string;
  subtitle?: string;
  buttonText: string;
  buttonLink: string;
  bgColor?: string;
}

const { 
  title, 
  subtitle, 
  buttonText, 
  buttonLink, 
  bgColor = "bg-coral" 
} = Astro.props;
---

<section class={`${bgColor} text-white py-16`}>
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl md:text-4xl font-agrandir font-bold mb-4">{title}</h2>
    {subtitle && <p class="text-xl mb-8 max-w-2xl mx-auto">{subtitle}</p>}
    <a 
      href={buttonLink} 
      class="inline-block bg-white text-coral px-8 py-3 rounded-full font-bold text-lg hover:bg-black hover:text-white transition duration-300"
    >
      {buttonText}
    </a>
  </div>
</section>