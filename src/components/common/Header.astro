---
import { Image } from 'astro:assets';
---

<header class="bg-white shadow-md fixed w-full z-50">
  <div class="container mx-auto px-4 py-3 flex justify-between items-center">
    <a href="/" class="flex items-center">
      <Image 
        src="/images/logo.png" 
        alt="byVivifit Logo" 
        width={150} 
        height={50} 
      />
    </a>
    
    <nav class="hidden md:flex space-x-6">
      <a href="/" class="text-black hover:text-coral transition duration-300 font-agrandir">Inicio</a>
      <a href="/sobre-mi" class="text-black hover:text-coral transition duration-300 font-agrandir">Sobre Mí</a>
      <a href="/el-metodo" class="text-black hover:text-coral transition duration-300 font-agrandir">El Método</a>
      <a href="/asesorias" class="text-black hover:text-coral transition duration-300 font-agrandir">Asesorías 1:1</a>
      <a href="/calculadora" class="text-black hover:text-coral transition duration-300 font-agrandir">Calculadora</a>
      <a href="/faq" class="text-black hover:text-coral transition duration-300 font-agrandir">FAQ</a>
    </nav>
    
    <div class="flex items-center space-x-4">
      <a href="https://www.instagram.com/byvivifit/" target="_blank" rel="noopener noreferrer" class="text-black hover:text-coral transition duration-300">
        <i class="fab fa-instagram text-xl"></i>
      </a>
      <a href="https://www.tiktok.com/@byvivifit" target="_blank" rel="noopener noreferrer" class="text-black hover:text-coral transition duration-300">
        <i class="fab fa-tiktok text-xl"></i>
      </a>
      <a href="https://app.byvivifit.com" class="bg-coral text-white px-4 py-2 rounded-full font-opensauce font-bold hover:bg-salmon transition duration-300">
        Comprar Ahora
      </a>
    </div>
    
    <button class="md:hidden text-black" id="mobile-menu-button">
      <i class="fas fa-bars text-2xl"></i>
    </button>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white w-full">
    <div class="container mx-auto px-4 py-3 flex flex-col space-y-4">
      <a href="/" class="text-black hover:text-coral transition duration-300 font-agrandir">Inicio</a>
      <a href="/sobre-mi" class="text-black hover:text-coral transition duration-300 font-agrandir">Sobre Mí</a>
      <a href="/el-metodo" class="text-black hover:text-coral transition duration-300 font-agrandir">El Método</a>
      <a href="/asesorias" class="text-black hover:text-coral transition duration-300 font-agrandir">Asesorías 1:1</a>
      <a href="/calculadora" class="text-black hover:text-coral transition duration-300 font-agrandir">Calculadora</a>
      <a href="/faq" class="text-black hover:text-coral transition duration-300 font-agrandir">FAQ</a>
      <div class="flex space-x-4 pt-2">
        <a href="https://www.instagram.com/byvivifit/" target="_blank" rel="noopener noreferrer" class="text-black hover:text-coral transition duration-300">
          <i class="fab fa-instagram text-xl"></i>
        </a>
        <a href="https://www.tiktok.com/@byvivifit" target="_blank" rel="noopener noreferrer" class="text-black hover:text-coral transition duration-300">
          <i class="fab fa-tiktok text-xl"></i>
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  });
</script>